# Environment Configuration for IndiCrafts
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DATABASE=indicrafts

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRE=7d

# Email Configuration (for notifications and password reset)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 Configuration (alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_s3_bucket_name

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5001/api
VITE_API_URL=http://localhost:5001/api
VITE_RAZORPAY_KEY_ID=

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Production URLs (update these for production deployment)
PRODUCTION_FRONTEND_URL=https://your-domain.com
PRODUCTION_BACKEND_URL=https://api.your-domain.com

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret